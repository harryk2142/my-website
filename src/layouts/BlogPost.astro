---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";

type Props = CollectionEntry<"blog">["data"];

const { title, description, pubDate, blogPostImage, previewImage } =
  Astro.props;
---

<html lang="de">
  <head>
    <BaseHead
      title={title}
      description={description}
      image={"images/blog/" + previewImage}
      type={"article"}
    />
    <style>
      .blog-post-img-container {
        width: 100%;
        max-width: 450px;
        margin-top: 10px;
        margin-bottom: 10px;
        margin-left: auto;
        margin-right: auto;
      }
      article {
        text-align: center;
        margin-left: auto;
        margin-right: auto;
        max-width: 600px;
        word-wrap: break-word;
      }
      article h1 {
        margin-bottom: 10px;
      }
      #publication-date {
        font-size: larger;
        color: seagreen;
        font-weight: bold;
        font-style: italic;
      }
    </style>
  </head>

  <body>
    <Header />
    <main>
      <article>
        <h1 class="title">{description}</h1>
        <span id="publication-date"><FormattedDate date={pubDate} /></span>
        {
          blogPostImage && (
            <div class="blog-post-img-container">
              <img src={"/images/blog/" + blogPostImage} alt={blogPostImage} />
            </div>
          )
        }
        <slot />
      </article>
    </main>
    <Footer />
  </body>
</html>
